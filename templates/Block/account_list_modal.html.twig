{%- block account_list_modal -%}

	{%- set bankAccounts = get_bank_accounts() -%}
	{%- set cardAccounts = get_card_accounts() -%}
	{%- set cashAccounts = get_cash_accounts() -%}

	<input type="hidden" id="modalType" name="modalType" value="{{ type }}">

	<div class="modal-header">
		<button type="button" class="close pull-right" aria-label="Close" data-dismiss="modal">
			<i class="fa fa-times"></i>
		</button>

		<div class="modal-title">
			{% if type == 'bank' %}
				{{ 'bank_accounts'|trans({}, 'SonataAdminBundle') }}
			{% elseif type == 'card' %}
				{{ 'card_accounts'|trans({}, 'SonataAdminBundle') }}
			{% else %}
				{{ 'cash_accounts'|trans({}, 'SonataAdminBundle') }}
			{% endif %}
		</div>
	</div>
		<div class="modal-body">
			<table class="table table-striped table-hover">
				<thead class="sticky-header">
					<tr>
						<th style="width:50%;">{{ 'account_name'|trans({}, 'SonataAdminBundle') }}</th>
						<th style="width:30%;">{{ 'balance'|trans({}, 'SonataAdminBundle') }}</th>
						<th style="width:20%;">{{ 'actions'|trans({}, 'SonataAdminBundle') }}</th>
					</tr>
				</thead>
				<tbody>
					{% set accountTypes = {
                    'bank': bankAccounts,
                    'card': cardAccounts,
                    'cash': cashAccounts
                } %}

					{% for account in accountTypes[type] %}
						{% include 'Block/account_list_data.html.twig' %}
					{% endfor %}
				</tbody>
			</table>
		</div>

{% endblock %}